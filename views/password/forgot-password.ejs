<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Forgot Password</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link href="../css/style.css" rel="stylesheet">
</head>
<body>
    <div class="container d-flex flex-column justify-content-center align-items-center min-vh-100">
        <form id="reset" class="row g-3 item">
            <input type="text" class="form-control" autocomplete="off" id='usermail' placeholder="Username/E-mail" required>
            <input class="btn btn-light glow invert" type="submit" id="submit" value="Send Reset Link">
        </form>
    </div>

    <!-- <% if (locals.error) { %>
        <h1><%= error %></h>
    <% } %> -->

    <script>
        const form = document.getElementById('reset')
        form.addEventListener('submit', reset)

        async function reset(e) {
            e.preventDefault()

            const usermail = document.getElementById('usermail').value

            const result = await fetch('api/forgot-password', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({
                    usermail
                })
            }).then(res => res.json())

            if (result.status === 'ok') {
                alert("The reset link has been sent to your registered e-mail!")
                window.location.replace('/');
            }
            else {
                alert(result.error)
                window.location.replace('/forgot-password');
            }
        }
    </script>
</body>
</html>